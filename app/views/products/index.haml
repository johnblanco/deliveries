.container
  .row.extra-air
    .col-md-4
      %select.form-control
        %option
          Saltar a sección...
        - @categories.each do |category|
          %option
            = category.name
    .col-md-4.pull-right
      %input.form-control{:placeholder => "Buscar en el menú"}
  .row
    .col-md-8
      %legend
        Lista de comidas

  .row
    .col-md-8
      - @categories.each do |category|
        .row
          .col-md-6
            %img{:src => category.picture }
            %label.category-name
              = category.name
        = render partial: "products/product_list", :locals => {:products => category.products}
    .col-md-4
      %p
        mi pedido
      #cart_items
        = render partial: "carts/items", :locals => {:items => @current_items}

.modal.fade#add_to_cart_modal
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", type: "button"} ×
        %h4.modal-title Agregar al pedido
      .modal-body

      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", type: "button"} Cancelar
        %button.btn.btn-primary#add_to_delivery{type: "button"} Agregar a mi pedido
